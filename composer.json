{
    "name": "tobento/service-sanitizer",
    "type": "library",
    "description": "Easily sanitizing data.",
    "keywords": [
        "tobento",
        "package",
        "php",
        "sanitize"
    ],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "tobento/service-collection": "^1.0",
        "tobento/service-dater": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0"
    },    
    "autoload": {
        "psr-4": {
            "Tobento\\Service\\Sanitizer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\Service\\Sanitizer\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}
